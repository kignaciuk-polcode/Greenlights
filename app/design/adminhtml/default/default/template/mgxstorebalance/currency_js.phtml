<script type="text/javascript">
elementId = '<?php echo $this->getParentBlock()->getWebsiteHtmlId()?>';
Event.observe(window, 'load', updateCurrency);
Event.observe($(elementId), 'change', updateCurrency);

var currecyList = <?php echo Mage::helper('mgxstorebalance')->getJsCurrency()?>;

function updateCurrency()
{
	websiteId = $(elementId).options[$(elementId).selectedIndex].value;
    if (currecyList[websiteId]) {
        $('storebalance_currency_code').innerHTML = '<strong>[' + currecyList[websiteId] + ']</b>';
    }
}
</script>