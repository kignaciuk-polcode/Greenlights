<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <default>
<!-- Remove callouts and rarely used stuff -->
        <remove name="right.poll"/>
        <remove name="right.permanent.callout"/>
        <remove name="left.permanent.callout"/>
        <remove name="cart_sidebar"/>
        <remove name="catalog.compare.sidebar"/>
        <remove name="paypal.partner.right.logo"/>
        <remove name="right.testimonials"/>
<!-- add the local stylesheet -->
        <reference name="head">
            <action method="addJs">
                <script>prototype/default-values.js</script>
            </action>            
            <action method="addCss">
                <stylesheet>css/local.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>css/social.css</stylesheet>
            </action>
        </reference>
        <reference name="header">
            <block type="checkout/cart_sidebar" name="cart_top" as="topCart" template="checkout/cart/top.phtml"/>
        </reference>
    </default>
    
    
    <wordpress_search_index>
        <update handle="wordpress_default"/>
        <reference name="content">
            <block type="wordpress/search_result" name="wordpress_search_result" template="wordpress/search/result.phtml">
                <block type="wordpress/post_list" name="wordpress_post_list" template="wordpress/post/list.phtml"/>
            </block>
        </reference>
    </wordpress_search_index>
    
    <catalogsearch_result_index translate="label">
        <block type="core/text_list" name="left" as="left" translate="label">
            <label>Left Column</label>
            <block type="catalogsearch/layer" name="catalogsearch.leftnav" after="currency" template="search/search_menu.phtml"/>
            <remove name="left.newsletter" />
        </block>
    </catalogsearch_result_index>
    
    
