<config>
    <modules>
        <Webtex_Core>
            <version>0.1.0</version>
        </Webtex_Core>
    </modules>
    
    <admin>
        <routers>
            <webtex>
                <use>admin</use>
                <args>
                    <module>Webtex_Core</module>
                    <frontName>webtex</frontName>
                </args>
            </webtex>
        </routers>
    </admin>
    
    <global>
        <blocks>
            <mgxcore>
                <class>Webtex_Core_Block</class>
            </mgxcore>
        </blocks>
        <resources>
            <mgxcore_setup>
                <setup>
                    <module>Webtex_Core</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mgxcore_setup>
            <mgxcore_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mgxcore_write>
            <mgxcore_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mgxcore_read>
        </resources>
        <models>
            <mgxcore>
                <class>Webtex_Core_Model</class>
            </mgxcore>
        </models>
        <helpers>
            <mgxcore>
                <class>Webtex_Core_Helper</class>
            </mgxcore>
        </helpers>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <webtex_core translate="title" module="mgxcore">
                                            <title><![CDATA[Webtexension :: Info]]></title>
                                            <!-- <children>
                                                <modules translate="title" module="mgxcore">
                                                    <title>Installed Extensions</title>
                                                    <sort_order>1</sort_order>
                                                </modules>
                                            </children> -->
                                        </webtex_core>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Webtex_Core>
                    <files>
                        <default>Webtex_Core.csv</default>
                    </files>
                </Webtex_Core>
            </modules>
        </translate>
    </adminhtml>
    <default>
        
    </default>
</config>
